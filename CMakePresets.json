{
    "version": 9,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "Base",
            "hidden": true,
            "binaryDir": "${sourceDir}/Temp/${presetName}",
            "installDir": "${sourceDir}/Install/${presetName}"
        },
        {
            "name": "Msvc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "Debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "Coverage",
            "hidden": true,
            "cacheVariables": {
                "ENABLE_COVERAGE": "ON"
            }
        },
        {
            "name": "Windows",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "toolset": {
                "value": "v145,host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "Windows-x64",
            "hidden": true,
            "inherits": [
                "Base",
                "Windows"
            ],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "Windows-x86",
            "hidden": true,
            "inherits": [
                "Base",
                "Windows"
            ],
            "architecture": {
                "value": "x86",
                "strategy": "external"
            }
        },
        {
            "name": "Linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "Linux-x64",
            "hidden": true,
            "inherits": [
                "Base",
                "Linux"
            ]
        },
        {
            "name": "Linux-x86",
            "hidden": true,
            "inherits": [
                "Base",
                "Linux"
            ],
            "cacheVariables": {
                "FVL_LINUX_32": "ON"
            }
        },
        {
            "name": "W32D",
            "displayName": "Windows x86 Debug",
            "inherits": [
                "Base",
                "Msvc",
                "Debug",
                "Windows",
                "Windows-x86"
            ]
        },
        {
            "name": "W32R",
            "displayName": "Windows x86 Release",
            "inherits": [
                "Base",
                "Msvc",
                "Release",
                "Windows",
                "Windows-x86"
            ]
        },
        {
            "name": "W64D",
            "displayName": "Windows x64 Debug",
            "inherits": [
                "Base",
                "Msvc",
                "Debug",
                "Windows",
                "Windows-x64"
            ]
        },
        {
            "name": "W64R",
            "displayName": "Windows x64 Release",
            "inherits": [
                "Base",
                "Msvc",
                "Release",
                "Windows",
                "Windows-x64"
            ]
        },
        {
            "name": "X32D",
            "displayName": "X (Linux) x86 Debug",
            "inherits": [
                "Base",
                "Msvc",
                "Debug",
                "Linux",
                "Linux-x86"
            ]
        },
        {
            "name": "X32R",
            "displayName": "X (Linux) x86 Release",
            "inherits": [
                "Base",
                "Msvc",
                "Release",
                "Linux",
                "Linux-x86"
            ]
        },
        {
            "name": "X64D",
            "displayName": "X (Linux) x64 Debug",
            "inherits": [
                "Base",
                "Msvc",
                "Debug",
                "Linux",
                "Linux-x64"
            ]
        },
        {
            "name": "X64R",
            "displayName": "X (Linux) x64 Release",
            "inherits": [
                "Base",
                "Msvc",
                "Release",
                "Linux",
                "Linux-x64"
            ]
        }
    ]
}
